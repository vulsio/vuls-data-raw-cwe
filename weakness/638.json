  "common_consequences": [
    {
      "scope": [
        "Integrity",
        "Confidentiality",
        "Availability",
        "Access Control",
        "Other"
      ],
      "impact": [
        "Gain Privileges or Assume Identity",
        "Execute Unauthorized Code or Commands",
        "Bypass Protection Mechanism",
