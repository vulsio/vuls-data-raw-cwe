  "potential_mitigations": [
    {
      "phase": [
        "Architecture and Design"
      ],
      "description": [
        "Ensure that all arguments are verified, as defined by the API you are protecting."
      ]
    },
    {
      "phase": [
        "Architecture and Design"
      ],
      "description": [
        "Drop privileges before invoking such functions, if possible."
      ]
    }
  ],
