	"potential_mitigations": [
		{
			"phase": [
				"Implementation"
			],
			"description": [
				"The DTD or schema validation will not catch the duplicate occurrence of the same form name. To find the issue in the implementation, manual checks or automated static analysis could be applied to the xml configuration files."
			]
		}
	],
	"demonstrative_examples": [
		{
			"text": "\n               <Intro_Text>Two validation forms with the same name.</Intro_Text>\n               <Example_Code Nature=\"Bad\" Language=\"XML\">\n                  <xhtml:div>&lt;form-validation&gt;<xhtml:div style=\"margin-left:1em;\">&lt;formset&gt;<xhtml:div style=\"margin-left:1em;\">&lt;form name=\"ProjectForm\"&gt; ... &lt;/form&gt;<xhtml:br/>&lt;form name=\"ProjectForm\"&gt; ... &lt;/form&gt;</xhtml:div>&lt;/formset&gt;</xhtml:div>&lt;/form-validation&gt;</xhtml:div>\n               </Example_Code>\n               <Body_Text>It is critically important that validation logic be maintained and kept in sync with the rest of the product.</Body_Text>\n            "
		}
	],
